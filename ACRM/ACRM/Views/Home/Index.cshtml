@{
    ViewBag.Title = "Azure CORS rule manager";
}

@model ACRM.Models.AzureCredentialsModel

<h2>Please enter your Azure credentials</h2>

@using (Html.BeginForm())
{
    if (!String.IsNullOrEmpty(Model.CustomErrorMessage))
    {
        <div>
            @Model.CustomErrorMessage
        </div>
    }
    
    <div>
        @Html.LabelFor(m => m.AccountName)
        @Html.EditorFor(m => m.AccountName)
        @Html.ValidationMessageFor(m => m.AccountName)
    </div>

    <div>
        @Html.LabelFor(m => m.AccountKey)
        @Html.EditorFor(m => m.AccountKey)
        @Html.ValidationMessageFor(m => m.AccountKey)
    </div>
    
    <div>
        <input type="submit" value="Set credentials">
    </div>
}

