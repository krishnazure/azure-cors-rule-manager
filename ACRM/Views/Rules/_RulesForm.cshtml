@model ACRM.Models.CorsRuleModel

<div id="allowed-origins-holder">
    <strong>@Html.Label("Allowed Origins")</strong>
    @for (var i = 0; i < Model.AllowedOrigins.Count; i++)
    {
        <div id="allowed-origins-inner-holder-@i">
            @Html.TextBoxFor(m => m.AllowedOrigins[i], new { @class = "allowed-origins-box" }) 
            <a href="javascript: void(0)" class="allowed-origins-remove-button" data-index="@i" data-camel-prefix="AllowedOrigins" data-dash-prefix="allowed-origins">x</a>
        </div>
    }
</div>  

<div id="allowed-headers-holder">
    <strong>@Html.Label("Allowed Headers")</strong>
    @for (var i = 0; i < Model.AllowedHeaders.Count; i++)
    {
        <div id="allowed-headers-inner-holder-@i">
            @Html.TextBoxFor(m => m.AllowedHeaders[i], new { @class = "allowed-headers-box" })
            <a href="javascript: void(0)" class="remove-button" data-index="@i" data-camel-prefix="AllowedHeaders" data-dash-prefix="allowed-headers">x</a>
        </div>    
    }
</div>  

<div id="exposed-headers-holder">
    <strong>@Html.Label("Exposed Headers")</strong>
    @for (var i = 0; i < Model.ExposedHeaders.Count; i++)
    {
        <div id="exposed-headers-inner-holder-@i">
            @Html.TextBoxFor(m => m.ExposedHeaders[i], new { @class = "exposed-headers-box" })
            <a href="javascript: void(0)" class="remove-button" data-index="@i" data-camel-prefix="ExposedHeaders" data-dash-prefix="exposed-headers">x</a>
        </div>
    }
</div>  

<div>
    <strong>@Html.LabelFor(m => m.MaxAgeInSeconds)</strong>
    <div>@Html.EditorFor(m => m.MaxAgeInSeconds)</div>
</div>